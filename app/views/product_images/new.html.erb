<h1>Add Photo</h1>

<div class="row">
<% if @images %>
  <% @images.each do |image| %>
    <div class="col-xs-12 col-md-6">
      <%= image_tag image.photo.thumb.url, class: 'square item_image' %>
    </div>
  <% end %>
<% end %>
</div>

<%= simple_form_for @product_image do |f| %>
  <%= f.file_field :photo %><br>
  <%= f.input :item_id, as: :hidden, :input_html => { :value => params[:item_id] } %>
  <%= f.submit 'Add Photo', class: 'btn btn-success btn-lg btn-block', data: { disable_with: "Uploading..." }  %>
<% end %>

<br>
<%= link_to 'Done', items_path, class: 'btn btn-primary btn-lg btn-block' %>