
<div id="blur_parent">
  <div id="blur_image">
</div>
    <div class="image_text_wrapper">
      <div class="image_text">

        <!-- flash messages -->
        <% flash.each do |message_type, message| %>
          <% if message_type == "notice" %>
            <p class="alert alert-info"><%= notice %></p>
          <% elsif message_type == "alert" %>
            <p class="alert alert-danger"><%= alert %></p>
          <% else %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
        <% end %>

        <h1>YOUR STORE, CONNECTED.</h1>
        <h4>Control Your Supply and Demand</h4>

        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-lg btn-danger' %>
        <%= link_to 'Log In', new_user_session_path, class: 'btn btn-lg btn-success' %>
      </div>
    </div>

  
</div>