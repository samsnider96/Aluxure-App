<h1>Enter Details</h1>

<%= simple_form_for @item do |f| %>
  <%= f.input :brand %>
  <%= f.input :category %>
  <%= f.input :color %>
  <%= f.input :size %>
  <%= f.input :material %>
  <%= f.input :condition %>
  <%= f.input :description %>
  <%= f.submit 'Submit', class: 'btn btn-success', data: { disable_with: 'Please wait...' } %>
<% end %>