<div class="well">
  <%= link_to '<i class="fa fa-arrow-circle-left"></i> All Items'.html_safe, items_path %>
  <h1>Item Details</h1>

  <div class="row">
    <% @images.each do |images| %>
      <div class="col-xs-4">
        <div class="thumbnail">
            <% if @images.empty? %>
              <%= image_tag 'shirt.png', class: 'item_image' %>
            <% else %>
              <%= image_tag images.photo.thumb.url, class: 'item_image' %>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
  <br>
  <% if @item.user_id == current_user.id %>
    <%= link_to '<i class="fa fa-plus-circle"></i> Add/Delete Photos'.html_safe, edit_product_image_path(image_upload_id: @item.image_upload_id) %>
    <span class="pull-right">
      <%= link_to '<i class="fa fa-pencil-square-o"></i> Edit'.html_safe, edit_item_path(@item) %>
      <%= link_to '<i class="fa fa-trash-o"></i> Delete'.html_safe, item_path(@item), method: :delete, data: { confirm: "Are you sure?" } %>
    </span>
  <% end %>
  <hr>

  <%= render partial: 'card', locals: {item: @item} %>

  
  <br class="clearfix">
</div>
