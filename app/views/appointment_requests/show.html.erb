<h1>Appointment for <%= @company.name %></h1>
<p><%= @company.description %></p>

<div class="row">
  <div class="col-xs-12 col-md-4">
    <div class="well">
      <h3>Address Details</h3>
      <address>
      <strong><%= @company.name %></strong><br>
      <%= @company.line_1 %><br>
      <%= @company.line_2 %><br>
      <%= @company.line_3 %><br>
      <%= @company.city %><br>
      <%= @company.county_province %><br>
      <%= @company.zip_or_postcode %><br>
      <%= @company.country %><br>
      <%= @company.other_address_details %><br>
      <%= @company.phone %><br>
      <%= @company.email %><br>
      </address>
    </div>
    <!-- well -->
  </div>
  <!-- col-md-4 -->
  
  <div class="col-xs-12 col-md-8">
    <% @appointment_items.each do |appointment_item| %>
      <% item = Item.find(appointment_item.item_id) %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Items</h3>
        </div>
        <div class="panel-body">
          <div class="row">

            <div class="col-xs-2">
              <div class="thumbnail">
                <% if item.product_images.empty? %>
                  <%= image_tag 'shirt.png', class: 'item_image_sm' %>
                <% else %>
                  <%= image_tag ProductImage.find_by(item_id: item.id).photo.thumb.url, class: 'item_image' %>
                <% end %>
              </div>
            </div>

            <div class="col-xs-10">
              <p><%= item.description %></p>
            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>


</div>
<!-- row -->