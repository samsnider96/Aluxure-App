<% if current_user.is_company_account? %>

  <h1>Incoming Appointment Requests</h1>
  <hr>
  <h3><%= "There are no incoming requests at this time." if @incoming_requests.empty? %></h3>
  <div class="row">
    <% @incoming_requests.each do |incoming_request| %>
    <div class="col-xs-12 col-md-4">

      <div class="panel panel-default">
        <div class="panel-heading">
          <h3><%= Company.find(incoming_request.company_id).name %>
            <span class="pull-right"><%= status_icon(incoming_request) %></span>
            </h3>
        </div>
        <div class="panel-body">
          <ul style="list-style-type:none;padding-left:0px;">
            <li><strong>Start Time:</strong> <%= display_datetime(incoming_request.start_time) %></li>
            <li><strong>End Time:</strong> <%= display_datetime(incoming_request.end_time) %></li>
            <li><strong>Status:</strong> <%= status(incoming_request) %></li>
          </ul>
          <%= link_to 'Details', appointment_request_path(incoming_request), class: 'btn btn-danger btn-block' %>
          <%= link_to 'Accept', appointment_approvals_path(appointment_request_id: incoming_request.id), method: :post, class: 'btn btn-success btn-block' unless incoming_request.approved || incoming_request.declined %>
          <%= link_to 'Decline', appointment_declinals_path(appointment_request_id: incoming_request.id), method: :post, class: 'btn btn-warning btn-block' unless incoming_request.approved || incoming_request.declined %>
          <%= "<button class='btn btn-success btn-block'><i class='fa fa-check-circle'></i> Approved!</button>".html_safe if incoming_request.approved %>

        </div>
      </div>

    </div>
    <% end %>
  </div>

<% else %>

  <h1>My Appointments</h1>
  <%= link_to ('<i class="fa fa-calendar"></i> Schedule New Appointment').html_safe, new_item_selection_path %>
  <hr>
  <h3><%= "You have no appointments at this time. Click <a href='/item_selections/new'>here</a> to make a new appointment request.".html_safe if @appointment_requests.empty? %></h3>
  <div class="row">
    <% @appointment_requests.each do |appointment_request| %>
      <div class="col-xs-12 col-md-4">

        <div class="panel panel-default">
          <div class="panel-heading">
            <h3><%= Company.find(appointment_request.company_id).name %>
              <span class="pull-right"><%= status_icon(appointment_request) %></span>
              </h3>
          </div>
          <!-- panel-heading -->
          <div class="panel-body">
            <ul style="list-style-type:none;padding-left:0px;">
              <li><strong>Start Time:</strong> <%= display_datetime(appointment_request.start_time) %></li>
              <li><strong>End Time:</strong> <%= display_datetime(appointment_request.end_time) %></li>
              <li><strong>Status:</strong> <%= status(appointment_request) %></li>
            </ul>
            <%= link_to 'Details', appointment_request_path(appointment_request), class: 'btn btn-danger btn-block' %>
          </div>
          <!-- panel-body -->
        </div>
        <!-- panel pane-default -->

      </div>
      <!-- col-xs-12 col-md-4 -->
    <% end %>
    <!-- @appointment_requests.each -->
  </div>
  <!-- row -->

<% end %>
