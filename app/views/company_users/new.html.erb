<h2>Sign up as Company User</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", help: "Must be at least 8 characters long" %>
  </div>

  <div class="field">
    <%= f.file_field :photo, label: "Profile Picture" %>
  </div>

  <%= f.hidden_field :type, value: 'CompanyUser' %>

  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-success' %>
  </div>
<% end %>

